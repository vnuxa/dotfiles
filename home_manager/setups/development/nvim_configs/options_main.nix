{
  # appearance settings
  number = true;
  relativenumber = true;
  wrap = false;
  scrolloff = 15; # adds padding to the bottom/top when scrolling (aka minimum lines visible)
  signcolumn = "yes"; # aka the bar on the left that shows comments and edited lines
  # tabs and indentation
  # autoindent = true;
  smartindent = true;
  tabstop = 4;
  softtabstop = 4;
  shiftwidth = 4;
  expandtab = true;

  # search settings
  hlsearch = false; # sets highlight on search
  incsearch = true;
  ignorecase = true;
  smartcase = true;

  # other settings
  mouse = "a"; # enables mouse
  completeopt = "menuone,noselect"; # gives a better completion experience
  termguicolors = true;


}